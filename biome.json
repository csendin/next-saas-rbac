{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"overrides": [{
		"include": ["apps/**", "packages/**"]
	}],
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"lineWidth": 120,
			"indentStyle": "space",
			"indentWidth": 4,
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"arrowParentheses": "always"
		}
	}
}
